<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="sku"
            type="java.lang.String"
            />
        <variable
            name="skuDetails"
            type="com.example.heartsvalentine.viewModels.NewFeaturesViewModel.SkuDetails"
            />
        <variable
            name="newFeaturesFragment"
            type="com.example.heartsvalentine.NewFeatures"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/featureName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/infoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:background="@color/yellow"
            android:backgroundTint="@color/yellow"
            android:text="@string/info"
            android:onClick="@{() -> newFeaturesFragment.showInfoPopUp(skuDetails)}"
            android:textAllCaps="false"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buyPurchasedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:text="@string/buy"
            android:onClick="@{() -> newFeaturesFragment.makePurchase(skuDetails.sku)}"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
    </LinearLayout>
</layout>